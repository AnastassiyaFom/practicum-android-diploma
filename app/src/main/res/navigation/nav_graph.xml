<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.ui.search.SearchFragment"
        android:label="Поиск вакансий"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_filterFragment"
            app:destination="@id/filterFragment" />

    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="ru.practicum.android.diploma.ui.filter.FilterFragment"
        android:label="Настройки фильтрации"
        tools:layout="@layout/fragment_filter">

        <action
            android:id="@+id/action_filterFragment_to_placeOfWorkFragment"
            app:destination="@id/placeOfWorkFragment" />

        <action
            android:id="@+id/action_filterFragment_to_industryFragment"
            app:destination="@id/industryFragment" />

    </fragment>



    <fragment
        android:id="@+id/vacancyFragment"
        android:name="ru.practicum.android.diploma.ui.vacancy.VacancyFragment"
        android:label="Вакансия"
        tools:layout="@layout/fragment_vacancy">

        <action
            android:id="@+id/action_vacancyFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>

    <fragment
        android:id="@+id/placeOfWorkFragment"
        android:name="ru.practicum.android.diploma.ui.placeofwork.PlaceOfWorkFragment"
        android:label="Выбор места работы"
        tools:layout="@layout/fragment_place_of_work">

        <action
            android:id="@+id/action_placeOfWorkFragment_to_countryFragment"
            app:destination="@id/countryFragment" />

        <action
            android:id="@+id/action_placeOfWorkFragment_to_regionFragment"
            app:destination="@id/regionFragment" />

        <action
            android:id="@+id/action_placeOfWorkFragment_to_filterFragment"
            app:destination="@id/filterFragment" />

    </fragment>

    <fragment
        android:id="@+id/countryFragment"
        android:name="ru.practicum.android.diploma.ui.country.CountryFragment"
        android:label="Выбор страны"
        tools:layout="@layout/fragment_country">

        <action
            android:id="@+id/action_countryFragment_to_placeOfWorkFragment"
            app:destination="@id/placeOfWorkFragment" />

    </fragment>


    <fragment
        android:id="@+id/regionFragment"
        android:name="ru.practicum.android.diploma.ui.region.RegionFragment"
        android:label="Выбор региона"
        tools:layout="@layout/fragment_region" >

        <action
            android:id="@+id/action_regionFragment_to_placeOfWorkFragment"
            app:destination="@id/placeOfWorkFragment" />

    </fragment>

    <fragment
        android:id="@+id/industryFragment"
        android:name="ru.practicum.android.diploma.ui.industry.IndustryFragment"
        android:label="Выбор отрасли"
        tools:layout="@layout/fragment_industry" >

        <action
            android:id="@+id/action_industryFragment_to_filterFragment"
            app:destination="@id/filterFragment" />

    </fragment>


    <fragment
        android:id="@+id/favoritesFragment"
        android:name="ru.practicum.android.diploma.ui.favorites.FavoritesFragment"
        android:label="Избранное"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/teamFragment"
        android:name="ru.practicum.android.diploma.ui.team.TeamFragment"
        android:label="Команда"
        tools:layout="@layout/fragment_team" />


</navigation>
