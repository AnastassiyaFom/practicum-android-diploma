<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.search.ui.SearchFragment"
        android:label="Поиск вакансий"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_searchFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />

    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="ru.practicum.android.diploma.filters.ui.views.FilterFragment"
        android:label="Настройки фильтрации"
        tools:layout="@layout/fragment_filter">

        <action
            android:id="@+id/action_filterFragment_to_placeOfWorkFragment"
            app:destination="@id/placeOfWorkFragment" />

        <action
            android:id="@+id/action_filterFragment_to_industryFragment"
            app:destination="@id/industryFragment" />
        <action
            android:id="@+id/action_filterFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>



    <fragment
        android:id="@+id/vacancyFragment"
        android:name="ru.practicum.android.diploma.vacancy.ui.VacancyFragment"
        android:label="Вакансия"
        tools:layout="@layout/fragment_vacancy">

        <argument
            android:name="vacancyId"
            app:argType="string" />


    </fragment>

    <fragment
        android:id="@+id/placeOfWorkFragment"
        android:name="ru.practicum.android.diploma.filters.ui.views.PlaceOfWorkFragment"
        android:label="Выбор места работы"
        tools:layout="@layout/fragment_place_of_work">

        <action
            android:id="@+id/action_placeOfWorkFragment_to_countryFragment"
            app:destination="@id/countryFragment" />

        <action
            android:id="@+id/action_placeOfWorkFragment_to_regionFragment"
            app:destination="@id/regionFragment" />

        <action
            android:id="@+id/action_placeOfWorkFragment_to_filterFragment"
            app:destination="@id/filterFragment" />

    </fragment>

    <fragment
        android:id="@+id/countryFragment"
        android:name="ru.practicum.android.diploma.filters.ui.views.CountryFragment"
        android:label="Выбор страны"
        tools:layout="@layout/fragment_country">

        <action
            android:id="@+id/action_countryFragment_to_placeOfWorkFragment"
            app:destination="@id/placeOfWorkFragment" />

    </fragment>


    <fragment
        android:id="@+id/regionFragment"
        android:name="ru.practicum.android.diploma.filters.ui.views.RegionFragment"
        android:label="Выбор региона"
        tools:layout="@layout/fragment_region" >

        <action
            android:id="@+id/action_regionFragment_to_placeOfWorkFragment"
            app:destination="@id/placeOfWorkFragment" />

    </fragment>

    <fragment
        android:id="@+id/industryFragment"
        android:name="ru.practicum.android.diploma.filters.ui.views.IndustryFragment"
        android:label="Выбор отрасли"
        tools:layout="@layout/fragment_industry" >

        <action
            android:id="@+id/action_industryFragment_to_filterFragment"
            app:destination="@id/filterFragment" />

    </fragment>


    <fragment
        android:id="@+id/favoritesFragment"
        android:name="ru.practicum.android.diploma.favorites.ui.FavoritesFragment"
        android:label="Избранное"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
    </fragment>

    <fragment
        android:id="@+id/teamFragment"
        android:name="ru.practicum.android.diploma.team.ui.TeamFragment"
        android:label="Команда"
        tools:layout="@layout/fragment_team" />


</navigation>
